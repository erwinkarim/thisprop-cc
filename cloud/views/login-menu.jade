if status == 'connected'
	li.dropdown
		a.dropdown-toggle(href='#', data-toggle='dropdown', role='button') Facebook Name
		ul.dropdown-menu(role='menu')
			li
				a(href='#') Settings
			li.divider
			li
				a#logout-fb(href='#') Log Out
else
	li
		a(href='#', data-toggle='modal', data-target='#login-modal') Login
		//for the login modal
		.modal.fade#login-modal
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type='button', data-dismiss='modal') &times;
						h4.modal-title Login
					.modal-body
						a.btn.btn-default.btn-block#login-fb(href='#') Login With Facebook
	
